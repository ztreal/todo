<?xml version="1.0" encoding="GBK" ?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
    <constant name="struts.enable.DynamicMethodInvocation" value="false"/>
    <constant name="struts.devMode" value="${todoman.struts.devMode}"/>
    <constant name="struts.objectFactory" value="spring"/>
    <constant name="struts.objectFactory.spring.autoWire " value="name"/>
    <constant name="struts.i18n.encoding" value="GBK"/>
    <constant name="struts.custom.i18n.resources" value="message/message"/>
    <package name="todoman-default" extends="struts-default">
        <result-types>
            <result-type name="velocity" class="com.jd.common.struts.velocity.VelocityLayoutResult" default="true"/>
        </result-types>
        <interceptors>
            <interceptor name="loginContext" class="com.jd.common.struts.interceptor.LoginContextInterceptor"/>
            <interceptor name="securityInterceptor" class="com.jd.common.struts.interceptor.DotnetSecurityInterceptor"/>
            <interceptor name="hrmPrivilegeInterceptor"
                         class="com.jd.common.struts.interceptor.HrmPrivilegeInterceptor"/>
            <interceptor-stack name="strutsDefaultStack">
                <interceptor-ref name="exception"/>
                <interceptor-ref name="alias"/>
                <interceptor-ref name="servletConfig"/>
                <interceptor-ref name="i18n"/>
                <interceptor-ref name="prepare"/>
                <interceptor-ref name="chain"/>
                <interceptor-ref name="debugging"/>
                <interceptor-ref name="scopedModelDriven"/>
                <interceptor-ref name="modelDriven"/>
                <interceptor-ref name="fileUpload">
                    <param name="maximumSize">4194304</param>
                    <!--单个文件最大4M -->
                    <param name="allowedTypes">
                        image/x-png,image/png,image/gif,image/jpeg,image/jpg,image/pjpeg,text/plain,application/octet-stream
                    </param>
                    <param name="allowedExtensions">jpg,jpeg,png,gif,txt,vm</param>
                </interceptor-ref>
                <interceptor-ref name="checkbox"/>
                <interceptor-ref name="multiselect"/>
                <interceptor-ref name="staticParams"/>
                <interceptor-ref name="actionMappingParams"/>
                <!--fix struts2远程执行代码的漏洞临时加上的,.*\\u0023.* -->
                <interceptor-ref name="params">
                    <param name="excludeParams">dojo\..*,^struts\..*,.*\\u0023.*</param>
                </interceptor-ref>
                <interceptor-ref name="conversionError"/>
                <interceptor-ref name="validation">
                    <param name="excludeMethods">input,back,cancel,browse</param>
                </interceptor-ref>
                <interceptor-ref name="workflow">
                    <param name="excludeMethods">input,back,cancel,browse</param>
                </interceptor-ref>
            </interceptor-stack>
            <interceptor-stack name="todomanInterceptor">
                <interceptor-ref name="strutsDefaultStack"/>
                <interceptor-ref name="loginContext"/>
                <interceptor-ref name="securityInterceptor"/>
                <interceptor-ref name="hrmPrivilegeInterceptor" />
            </interceptor-stack>
        </interceptors>
        <default-interceptor-ref name="todomanInterceptor"/>
        <global-results>
            <result name="exception">/WEB-INF/vm/error.vm</result>
            <result name="error">/WEB-INF/vm/error.vm</result>
            <result name="input">/WEB-INF/vm/convertError.vm</result>
            <result name="login_error">/WEB-INF/vm/loginError.vm</result>
            <result name="illegal">/WEB-INF/vm/illegal.vm</result>
            <result name="showResult">/WEB-INF/vm/showResult.vm</result>
            <result name="login" type="redirect">${loginUrl}</result>
            <!--安全认证登录页面 -->
        </global-results>
        <global-exception-mappings>
            <exception-mapping exception="java.lang.Exception" result="exception"/>
        </global-exception-mappings>
    </package>
    <package name="json-protected-default" extends="todoman-default">
        <result-types>
            <result-type name="json" class="org.apache.struts2.json.JSONResult"/>
        </result-types>
        <interceptors>
            <interceptor name="json" class="org.apache.struts2.json.JSONInterceptor"/>
        </interceptors>
    </package>
    <package name="index" extends="todoman-default" namespace="/">
        <action name="index" class="com.easytodo.com.web.action.IndexAction">
            <result>/WEB-INF/vm/index.vm</result>
        </action>
        <action name="leftFrame" method="frame" class="com.easytodo.com.web.action.IndexAction">
            <result>/WEB-INF/vm/leftFrame.vm</result>
        </action>
        <action name="topFrame" method="frame" class="com.easytodo.com.web.action.IndexAction">
            <result>/WEB-INF/vm/topFrame.vm</result>
        </action>
        <action name="logout" method="logout" class="com.easytodo.com.web.action.IndexAction">
            <result type="redirectAction">
                <param name="namespace">/</param>
                <param name="actionName">index.action</param>
            </result>
        </action>
    </package>
    <include file="struts-timetask.xml"/>
    <include file="struts-order.xml"/>
    <include file="struts-price.xml"/>
    <include file="struts-json.xml"/>
    <include file="struts-threeparty.xml"/>
    <include file="struts-view.xml"/>
    <include file="struts-attr.xml"/>
    <include file="struts-attrvalue.xml"/>
    <include file="struts-salestate.xml"/>
</struts>